<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="collective.gspreadsyncmanager">

    <browser:page
        name="sync_person"
        for="*"
        class=".views.SyncPerson"
        permission="cmf.ManagePortal"
    />

    <browser:page
        name="sync_organization"
        for="*"
        class=".views.SyncOrganization"
        permission="cmf.ManagePortal"
    />

    <browser:page
        name="sync_all_organizations"
        for="*"
        class=".views.SyncAllOrganizations"
        permission="cmf.ManagePortal"
    />

    <browser:page
        name="sync_all_persons"
        for="*"
        class=".views.SyncAllPersons"
        permission="cmf.ManagePortal"
    />

    <browser:page
        name="sync_all_persons_ajax"
        for="*"
        class=".views.SyncAllPersonsAJAX"
        permission="cmf.ManagePortal"
    />

    <browser:page
        name="request_sync_all_persons"
        for="*"
        class=".views.RequestSyncAllPersons"
        permission="zope2.View"
    />

  	<browser:page
	    name="gsheetsapi-controlpanel"
	    for="Products.CMFPlone.interfaces.IPloneSiteRoot"
	    class="..controlpanel.controlpanel.GsheetsPanelView"
	    permission="cmf.ManagePortal"
	/>

</configure>